{
	"name": "db-code",
	"displayName": "db-code",
	"description": "db-code for VS Code",
	"version": "0.0.1",
	"publisher": "roenlie",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"type": "module",
	"main": "./dist/extension.cjs",
	"activationEvents": [
		"workspaceContains:.dbcode"
	],
	"contributes": {
		"commands": [
			{
				"command": "dbCode.selectDomain",
				"title": "Select a domain to explore code in."
			},
			{
				"command": "dbCode.source-control.commit",
				"title": "Commit local changes to remote.",
				"icon": {
					"light": "resources/icons/light/check.svg",
					"dark": "resources/icons/dark/check.svg"
				}
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "dbCode.source-control.commit",
					"group": "navigation",
					"when": "scmProvider == dbCode"
				}
			],
			"commandPalette": [],
			"view/title": [],
			"view/item/context": []
		},
		"configuration": [
			{
				"title": "JSON Outline",
				"properties": {
					"jsonOutline.autorefresh": {
						"type": "boolean",
						"description": "Auto refresh the JSON outline view when the contents of the json file change.",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm build",
		"build": "vite build",
		"watch": "vite build --watch",
		"lint": "eslint \"src/**/*.ts\""
	},
	"devDependencies": {
		"@preact/signals-core": "^1.8.0",
		"@roenlie/reflect-metadata": "^1.0.3",
		"@types/ftp": "^0.3.36",
		"@types/vscode": "^1.73.0",
		"env-paths": "^3.0.0",
		"ftp": "^0.3.10",
		"globby": "^14.0.2",
		"inversify": "^6.0.2",
		"mkdirp": "3.0.1",
		"rimraf": "^6.0.1",
		"vite": "^5.3.5"
	}
}
